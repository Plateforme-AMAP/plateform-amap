{% extends 'base.html.twig' %}
{% block navbar %}{% endblock %}
{% block sideNavbar %}{% endblock %}
{% block title %}Contact{% endblock %}

{% block body %}
	<div class="l-frontOffice__content -twoParts" >
		<img src="/images/contact-img.jpg" alt="">
			<div class="o-form-front">
			<div>
				<h1 class="a-title1 -website">Nous contacter</h1>
				<p>Une question? n'hésitez pas à nous envoyer un message nous essayons de vous répondre au plus vite !</p>
				{{ form_start(form) }}

				{{ form_row(form.fullName) }}

				{{ form_row(form.email) }}
					
				{{ form_row(form.subject) }}

				{{ form_row(form.message) }}

				{% include '@atom/button/button.html.twig' with {
					text: "Envoyer",
					attributeList: {
						class: '-website',
						title: "Envoyer",
						type:"submit"
					}
				} only %}
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
