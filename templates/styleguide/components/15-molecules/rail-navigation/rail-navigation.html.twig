{% set componentClass = 'm-navigationSideBar' %}
{% set attributeList = attributeList is defined ? attributeList : {} %}
{% set attributeList = attributeList|merge({'class': (attributeList.class is defined ? componentClass ~' ' ~ attributeList.class : componentClass)}) %}

<aside {% for attribute, value in attributeList %} {{ attribute }}="{{ value }}"{% endfor %}>
    <nav class="m-navigationSideBar__nav">
        <ul class="">
            <li>
                {# {% set isDashboardActive = "dashboard" in app.request.attributes.get('_route') %}
                {% if isDashboardActive %}
                 #}


                {% include '@atom/link/link.html.twig' with {
                    text: "Dashboard",
                    icon: "/icons/dashboard-category.svg",
                    alt: "dashboard",
                    attributeList: {
                        class:("dashboard" in app.request.attributes.get('_route')) ? '-light -menuVariant -active' : '-light -menuVariant',
                        href: path('app_dashboard-admin'),
                        title: "Aller au tableau de bord"
                    }
                } %}
            </li>
            <li>
                {% include '@atom/link/link.html.twig' with {
                    text: "Pages",
                    icon: "/icons/pages-category.svg",
                    alt: "Page",
                    attributeList: {
                        class:("app_products-admin" in app.request.attributes.get('_route')) ? '-light -menuVariant -active' : '-light -menuVariant',
                        href: path('app_products-admin'),
                        title: "Aller aux pages"
                    }
                } %}
            </li>
            <li>
                {% include '@atom/link/link.html.twig' with {
                    text: "Paramètres",
                    icon: "/icons/settings.svg",
                    alt: "Rouages",
                    attributeList: {
                        class:("app_user-admin" in app.request.attributes.get('_route')) ? '-light -menuVariant -active' : '-light -menuVariant',
                        href: path('app_user-admin'),
                        title: "Aller aux paramètres"
                    }
                } %}
            </li>
        </ul>
    </nav>
</aside>