{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Produits</h1>
				{% for product in products %}
					<div class="col mb-5">
						<div
							class="card h-100">

							<!-- Product image-->
							{# {% if product.productPicture %}
								<img class="card-img-top" src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="..."/>
							{% else %} #}
								<img class="card-img-top" src="https://via.placeholder.com/80" alt="Card image cap">
							{# {% endif %} #}
								<div class="text-center">
									<!-- Product name-->
									<h5 class="fw-bolder">{{ product.productName }}</h5>
									<!-- Product price-->
									{{ product.productPrice|number_format(0, ',', ' ') }} €
									<p>créé le {{ product.productCreatedAt|date("d/m/Y à H:i:s") }}</p>
								</div>
							<!-- Product actions-->
							<a class="btn btn-outline-dark mt-auto" href="{{ path('details_product', {id : product.id }) }}">Voir le Produit</a>
							<a class="btn btn-outline-dark mt-auto" href="{{ path('edit_product', {id : product.id }) }}">Modifier le Produit</a>
							<a class="btn btn-outline-dark mt-auto" href="{{ path('delete_product', {id : product.id }) }}">Supprimer le Produit</a>
						</div>
					</div>
				{% endfor %}
    <a href="{{ path('add_product') }}" class="">Ajouter un produit</a>
</div>
{% endblock %}